# Database connection string (use your own username, password, host, db name)
DB_CONNECTION_STRING=mysql://<DB_USER>:<DB_PASSWORD>@<DB_HOST>:3306/<DB_NAME>

# JWT Secrets (set strong random strings here)
JWT_ACCESS_SECRET=your_access_secret
JWT_REFRESH_SECRET=your_refresh_secret

# Server port
PORT=3000

# JWT expiry durations
JWT_ACCESS_EXPIRY=1d
JWT_REFRESH_EXPIRY=30d

# App environment
NODE_ENV=development

# Email credentials for sending mails (Gmail example shown)
EMAIL=youremail@gmail.com
EMAIL_PASSWORD=your_app_password

# Alternative email config (if used in the project)
EMAIL_USER=youremail@gmail.com
EMAIL_PASS=your_app_password
